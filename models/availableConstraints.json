/*
  Options for constraints as defined in: https://w3c.github.io/mediacapture-main/getusermedia.html
  constraints not added: latency, facingMode, sampleRate, sampleSize, volume
*/

{
  "video": {
    "height": {
      "type": "range",
      "min": 1,
      "max": 1080
    },
    "width": {
      "type": "range",
      "min": 1,
      "max": 1920
    },
    "aspectRatio": {
      "type": "range",
      "min": 0.0,
      "max": 4.0
    },

    "frameRate": {
      "type": "range",
      "min": 1,
      "max": 128
    }
  },
  "audio": {
    "channelCount": {
      "type": "range",
      "default": 2,
      "min": 0,
      "max": 128
    },
    "echoCancellation": {
      "type": "boolean",
      "default": true
    }
  }
}
